<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@android:color/transparent"
        />

    <TextView
        android:id="@+id/topic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        tools:text="Reunion comptabilitÃ©"/>

    <TextView
        android:id="@+id/mail_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topic_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:text="@string/Participants"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/mail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mail_text_1"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        tools:text="Maxime@Lamezone.com, Luca@lamezone.com"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/date_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mail_text_2"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:text="@string/Date"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/date_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/date_text_1"
        app:layout_constraintStart_toEndOf="@id/date_text_1"
        android:textColor="@android:color/black"
        tools:text="01/01/2020 12:00-13:00"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/room_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/date_text_1"
        app:layout_constraintStart_toStartOf="@id/date_text_2"
        android:textColor="@android:color/black"
        tools:text="Salle 1"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>